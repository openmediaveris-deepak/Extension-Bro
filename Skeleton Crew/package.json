{
  "name": "extension-pro",
  "version": "1.0.0",
  "description": "Modern Chrome extension boilerplate with premium UI design, React, TypeScript, Vite, and Tailwind CSS",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "rimraf dist && vite build && node ./scripts/copy-manifest.js",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "preview": "vite preview --port 5174",
    "zip": "node ./scripts/zip-dist.js",
    "generate-icons": "node ./scripts/generate-icons.js"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/chrome": "^0.1.24",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react": "^4.0.0",
    "archiver": "^7.0.0",
    "autoprefixer": "^10.4.21",
    "canvas": "^3.2.0",
    "jsdom": "^27.0.1",
    "postcss": "^8.5.6",
    "rimraf": "^3.0.2",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.0.0",
    "vite": "^5.0.0",
    "vitest": "^4.0.3"
  }
}
